{
  "extends": "tsconfig/react-library.json",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules", "**/*.spec.ts", "**/*.spec.tsx"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2015"],
    "module": "ESNext",
    "target": "es6",
    "types": [
      "cypress",
      "cypress-axe",
      "node",
      "jest",
      "ts-jest",
      "@testing-library/jest-dom",
      "@testing-library/react"
    ]
  }
}
