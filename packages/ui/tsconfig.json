  "exclude": ["dist", "build", "node_modules", "src/**/*.spec.tsx", "cypress"],
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-jsx",
    "lib": ["ES2019", "DOM"],
    "module": "ESNext",
